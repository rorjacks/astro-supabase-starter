---
// NES.css demo page for Astro
import '../styles/nes.css';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NES.css Demo</title>
  </head>
  <body style="background:#212529;min-height:100vh;padding:2rem;">
    <section style="max-width:600px;margin:auto;">
      <h1 class="nes-text is-primary">NES.css Demo UI</h1>
      <button type="button" class="nes-btn is-primary" style="margin:1rem 0;">Primary Button</button>
      <button type="button" class="nes-btn is-success" style="margin:1rem 0;">Success Button</button>
      <button type="button" class="nes-btn is-warning" style="margin:1rem 0;">Warning Button</button>
      <button type="button" class="nes-btn is-error" style="margin:1rem 0;">Error Button</button>
      <section style="margin:2rem 0;">
        <label for="name_field" class="nes-text">Name</label>
        <input type="text" id="name_field" class="nes-input" />
      </section>
      <section style="margin:2rem 0;">
        <label><input type="checkbox" class="nes-checkbox" checked /> Checkbox</label>
        <label><input type="radio" class="nes-radio" name="radio" checked /> Radio</label>
      </section>
      <section style="margin:2rem 0;">
        <progress class="nes-progress is-primary" value="80" max="100"></progress>
      </section>
      <section style="margin:2rem 0;">
        <i class="nes-icon coin is-large"></i>
        <i class="nes-icon heart is-large"></i>
        <i class="nes-icon star is-large"></i>
      </section>
      <section style="margin:2rem 0;">
        <div class="nes-balloon from-left">
          <p>Hello, NES.css!</p>
        </div>
      </section>
    </section>
  </body>
</html>
